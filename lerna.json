{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "command": {
    "version": {
      "exact": true
    },
    "publish": {
      "message": "chore(release): publish %s [skip ci]",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md",
    "**/package.json",
    "pnpm-lock.yaml",
    "**/tsconfig.json"
  ],
  "npmClient": "pnpm",
  "version": "0.40.1"
}