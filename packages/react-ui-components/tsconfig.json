{
	"compilerOptions": {
		"declaration": true,
		"noImplicitAny": true,
		"removeComments": true,
		"noLib": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"outDir": "./dist",
		"lib": ["dom", "es2015"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"target": "es2015",
		"skipLibCheck": true,
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"declarationDir": "./dist/types"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist", "**/__tests__/**"],
	"compileOnSave": false,
	"buildOnSave": false
}
